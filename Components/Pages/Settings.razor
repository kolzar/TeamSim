@page "/settings"

@inject NavigationManager NavigationManager

<h1>Impostazioni</h1>

<div class="settings-container">
    <!-- Sezione Lingua -->
    <div class="settings-section">
        <h3>Lingua</h3>
        <select @onchange="ChangeLanguage" class="form-select">
            <option value="en" selected>English</option>
            <option value="it">Italiano</option>
            <option value="fr">Français</option>
            <option value="es">Español</option>
        </select>
    </div>

    <!-- Sezione Livello di Difficoltà -->
    <div class="settings-section">
        <h3>Livello di Difficoltà</h3>
        <select @bind="GameDifficulty" class="form-select">
            <option value="Easy">Facile</option>
            <option value="Medium">Medio</option>
            <option value="Hard">Difficile</option>
        </select>
    </div>

    <!-- Sezione Audio -->
    <div class="settings-section">
        <h3>Audio</h3>
        <label for="volume">Volume</label>
        <input type="range" id="volume" min="0" max="100" step="1" @bind="VolumeLevel" />
        <p>Livello volume: @VolumeLevel%</p>
    </div>

    <!-- Pulsanti -->
    <div class="settings-buttons">
        <button class="btn btn-success" @onclick="SaveSettings">Salva</button>
        <button class="btn btn-danger" @onclick="Cancel">Annulla</button>
    </div>
</div>

@code {
    // Valori delle impostazioni
    private string SelectedLanguage = "en";
    private string GameDifficulty = "Medium";
    private int VolumeLevel = 50;

    // Cambia lingua
    private void ChangeLanguage(ChangeEventArgs e)
    {
        SelectedLanguage = e.Value.ToString();
    }

    // Salva le impostazioni
    private void SaveSettings()
    {
        // Logica per salvare le impostazioni (es. in un file o database)
        Console.WriteLine($"Lingua: {SelectedLanguage}, Difficoltà: {GameDifficulty}, Volume: {VolumeLevel}");
        NavigationManager.NavigateTo("/");
    }

    // Annulla le modifiche
    private void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }
}
