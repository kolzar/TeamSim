@page "/game"
@inject NavigationManager NavigationManager

<h1>Schermata del Gioco</h1>

<div class="game-container">
    <!-- Sezione Superiore -->
    <div class="top-bar">
        <button class="btn btn-primary" @onclick="GoToTeamManagement">Gestione Squadra</button>
        <button class="btn btn-secondary" @onclick="GoToFixtures">Partite</button>
        <button class="btn btn-warning" @onclick="GoToStandings">Classifica</button>
        <button class="btn btn-danger" @onclick="GoToMainMenu">Torna al Menu</button>
    </div>

    <!-- Sezione centrale -->
    <div class="game-content">
        <h3>Prossima Partita</h3>
        <div class="match-preview">
            <p>Squadra di casa: <strong>@NextMatchHomeTeam</strong></p>
            <p>Squadra ospite: <strong>@NextMatchAwayTeam</strong></p>
            <p>Data: <strong>@NextMatchDate</strong></p>
        </div>
        <button class="btn btn-success" @onclick="StartMatch">Inizia Partita</button>
    </div>
</div>

@code {
    // Dati della partita
    private string NextMatchHomeTeam = "AC Milan";
    private string NextMatchAwayTeam = "Inter";
    private DateTime NextMatchDate = DateTime.Now.AddDays(3);

    // Navigazione alle sezioni del gioco
    private void GoToTeamManagement()
    {
        NavigationManager.NavigateTo("/team-management");
    }

    private void GoToFixtures()
    {
        NavigationManager.NavigateTo("/fixtures");
    }

    private void GoToStandings()
    {
        NavigationManager.NavigateTo("/standings");
    }

    private void GoToMainMenu()
    {
        NavigationManager.NavigateTo("/");
    }

    private void StartMatch()
    {
        // Logica per iniziare la partita
        NavigationManager.NavigateTo("/match");
    }
}
